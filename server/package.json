{
  "name": "beiizetu-stream-server",
  "version": "1.0.0",
  "description": "Server-side services for Beiizetu Stream",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch index.ts",
    "dev:nodemon": "nodemon --exec tsx index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "clean": "rimraf dist",
    "clean:build": "npm run clean && npm run build",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 delete ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs beiizetu-server",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "kill": "pkill -f node || true",
    "test": "node --test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.15",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "email",
    "otp",
    "authentication",
    "mailer",
    "express",
    "typescript"
  ],
  "author": "Beiizetu Stream",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}